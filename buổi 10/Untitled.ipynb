   "source": [
    "import turtle\n",
    "i=0\n",
    "pen=turtle.Turtle()\n",
    "pen.goto(0,0)\n",
    "a=int(input(\"nhập khoảng cách\"))\n",
    "distance=0\n",
    "while distance<a:\n",
    "    pen.forward(i)\n",
    "    pen.right(10)\n",
    "    i+=0.05\n",
    "    distance+=0.1"
   ]
